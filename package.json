{
  "name": "todoapp",
  "version": "0.0.0",
  "description": "A simple TODO app",
  "main": "src/index/js",
  "scripts": {
    "build:fonts": "cp -r node_modules/font-awesome/fonts build/fonts",
    "build:styles": "cp src/client/styles/style.css build/",
    "build:js": "node_modules/.bin/browserify src/client/js/app.js | node_modules/.bin/babel --presets es2015 --no-comments --compact true --out-file build/bundle.js",
    "build": "npm run build:js && npm run build:fonts && npm run build:styles",
    "clean": "rm -rf build/",
    "dev:client": "node_modules/.bin/parallelshell 'npm run watch:client' 'node_modules/.bin/livereload build' 'npm start'",
    "dev:server": "node_modules/.bin/parallelshell 'npm run watch:server'",
    "dev": "node_modules/.bin/parallelshell 'npm run watch:client' 'node_modules/.bin/livereload build' 'npm run watch:server'",
    "prebuild": "npm run clean && mkdir -p build",
    "start": "npm run build && node bin/start.js",
    "test:api": "node_modules/.bin/mocha tests/api --recursive",
    "test": "npm run test:api",
    "watch:client": "node_modules/.bin/parallelshell 'npm run watch:styles' 'npm run watch:js'",
    "watch:styles": "node_modules/.bin/watch 'npm run build:styles' src/client/styles/ --include=\"src/client/styles/**/*.css\"",
    "watch:js": "node_modules/.bin/watch 'npm run build:js' src/client/js/ --include=\"src/client/**/*.js\"",
    "watch:server": "node_modules/.bin/nodemon --watch src/ -x 'npm start'"
  },
  "author": {
    "name": "Justinas Marcinka",
    "email": "justinas.marcinka@gmail.com",
    "url": "https://github.com/jmjustas"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "browserify": "^13.0.0",
    "jest": "^0.1.40",
    "jest-cli": "^0.9.2",
    "livereload": "^0.4.1",
    "mocha": "^2.4.5",
    "nodemon": "^1.8.1",
    "parallelshell": "^2.0.0",
    "should": "^8.3.0",
    "supertest": "^1.2.0",
    "watch": "git+https://git@github.com/pgraham/watch.git#glob-filter"
  },
  "dependencies": {
    "babel-polyfill": "^6.7.2",
    "body-parser": "^1.15.0",
    "ejs": "^2.4.1",
    "express": "^4.13.4",
    "font-awesome": "^4.5.0",
    "http-errors": "^1.4.0",
    "http-status": "^0.2.1",
    "knex": "^0.10.0",
    "lodash": "^4.5.0",
    "mysql": "^2.10.2",
    "uuid": "^2.0.1"
  }
}
